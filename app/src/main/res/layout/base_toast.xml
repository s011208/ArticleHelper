<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/base_toast"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/toast_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/base_toast_margin_v"
        android:layout_marginLeft="@dimen/base_toast_margin_h"
        android:layout_marginRight="@dimen/base_toast_margin_h"
        android:layout_marginTop="@dimen/base_toast_margin_v"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="@dimen/base_toast_text_size" />
</LinearLayout>