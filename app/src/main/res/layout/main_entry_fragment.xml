<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#eeeeee"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridView
        android:id="@+id/main_entry_grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/main_entry_fragment_layout_margin"
        android:horizontalSpacing="@dimen/main_entry_fragment_grid_spacing"
        android:numColumns="@integer/main_entry_fragment_grid_column_num"
        android:verticalSpacing="@dimen/main_entry_fragment_grid_spacing"></GridView>
</RelativeLayout>